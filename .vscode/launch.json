{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "SSMF python",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tb_model.py",
            "python": "${workspaceFolder}/.pyenv/bin/python",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONDONTWRITEBYTECODE": "1"
            }
        },
        {
            "name": "SSMF pytest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-sv", 
                "${workspaceFolder}/tests"
            ],
            "python": "${workspaceFolder}/.pyenv/bin/python",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONDONTWRITEBYTECODE": "1"
            }
        }
    ]
}