[MESSAGES CONTROL]
disable=missing-docstring,
        invalid-name,
        abstract-method,
        trailing-whitespace,
        redefined-builtin,
        wrong-import-order,
        attribute-defined-outside-init,
        no-member,
        broad-exception-caught

[FORMAT]
max-line-length=150

[TYPECHECK]
ignored-classes=numpy.ndarray
generated-members=magnitude
